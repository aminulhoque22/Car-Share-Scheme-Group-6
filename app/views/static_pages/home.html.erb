          <div class="col-md-3 pr-0">
            <select class="form-control"  id="from">
              <option selected disabled>From</option>
              <option>Cardigan Street </option>
              <option>Swanston Street</option>
              <option>Dawson Street</option>
              <option>Bundoora Campus</option>
              <option>RAAF William Base Point Cook</option>
            </select>
          </div>
          <div class="col-md-3 pr-0">
             <select class="form-control"  id="to">
              <option selected disabled>To</option>
              <option>Cardigan Street </option>
              <option>Swanston Street</option>
              <option>Dawson Street</option>
              <option>Bundoora Campus</option>
              <option>RAAF William Base Point Cook</option>
            </select>
          </div>
          <div class="col-md-3 pr-0">
            <input type="text" class="form-control datepicker" placeholder="Return Date">
          </div>
          <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-block btn-search">Submit</button>
          </div>
        </div>
      <%end%>
    </div>
  </div>

  <%# <h1>Welcome to Car Rental App  test</h1>

