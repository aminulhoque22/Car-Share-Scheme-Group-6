<%- query = {}; query["q"] = {};%>
<% provide(:title, "Home") %>
<div class="search-section">
  <div class="search-holder">
    <h1>Search a car </h1>
    <p class="subtitle">Rent your dream car here</p>
    <div class="search-box container">
      <%- query["status_cont"]="Available" %>
      <%= form_tag cars_path, method: :get do %>
        <% hidden_field_tag "q[status_cont]", 'Available' %>
