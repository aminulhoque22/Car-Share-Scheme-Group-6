<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card lead-card">
        <div class="card-header">

          <% provide(:title, @user.name) %>

          <h1>
            <%= @user.name %><br>
          </h1>
        </div>
        <div class="card-body">
          <div class="row">
         
              <% if true %> 
                <div class="col-md-4 form-group">
                  <%= label_tag :email %>
                  <%= @user.email %>
                   </div>
                   <div class="col-md-4 form-group">
                  <%= label_tag "Total rental charge" %>
                    
                  <%= '%.2f' % @user.rentalCharge %>
                   </div>
                    <div class="col-md-4 form-group">
                  <%= label_tag "Available to rent car?" %>
                  <%= (@user.available)? "Yes": "No" %>
                    </div>
                    <div class="col-md-4 form-group">
                    <%= label_tag :notification %>
                    <%= @user.notification %>
                      </div>
                  <% end %>
           
          </div>

          <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-link" %> 
          <% if isAdmin? || isSuperAdmin? %>
          <% if !current_user?(@user) %>
          <%= link_to "Delete", @user, method: :delete, data: { confirm: "Delete this user?" } %> |
          <% end %>
          <%= link_to 'List', users_path, :class => "btn btn-link" %> 
          <% end %>
          <%= link_to 'Back', :back, :class => "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
</div>